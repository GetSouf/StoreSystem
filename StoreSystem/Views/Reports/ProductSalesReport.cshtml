@model IEnumerable<ProductSalesReportViewModel>

@{
    ViewData["Title"] = "Product Sales Report";
}

<h2>Product Sales Report</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="ProductSalesReport" asp-route-sortOrder="@ViewData["ProductSortParam"]">Product</a>
            </th>
            <th>
                <a asp-action="ProductSalesReport" asp-route-sortOrder="@ViewData["CategorySortParam"]">Category</a>
            </th>
            <th>
                <a asp-action="ProductSalesReport" asp-route-sortOrder="@ViewData["SupplierSortParam"]">Supplier</a>
            </th>
            <th>
                <a asp-action="ProductSalesReport" asp-route-sortOrder="@ViewData["PriceSortParam"]">Price</a>
            </th>
            <th>
                <a asp-action="ProductSalesReport" asp-route-sortOrder="@ViewData["QuantitySortParam"]">Quantity Sold</a>
            </th>
            <th>
                <a asp-action="ProductSalesReport" asp-route-sortOrder="@ViewData["SalesCountSortParam"]">Sales Count</a>
            </th>
            <th>
                <a asp-action="ProductSalesReport" asp-route-sortOrder="@ViewData["AverageRatingSortParam"]">Average Rating</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.SupplierName</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.QuantitySold</td>
                <td>@item.SalesCount</td>
                <td>@item.AverageRating</td>
            </tr>
        }
    </tbody>
</table>
