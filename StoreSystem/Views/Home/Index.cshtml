@{
    ViewData["Title"] = "Home Page";
}
@if (User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <h1 class="display-4">Welcome to Electronics Store System</h1>
        <p class="lead">Efficiently manage your store operations with ease!</p>
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-5">
        <div class="button-grid">
            <div class="button-item">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Manage Products</a>
            </div>
            <div class="button-item">
                <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">Manage Categories</a>
            </div>
            <div class="button-item">
                <a asp-controller="Orders" asp-action="Index" class="btn btn-success">View Orders</a>
            </div>
            <div class="button-item">
                <a asp-controller="Customers" asp-action="Index" class="btn btn-info">Customer Management</a>
            </div>
            <div class="button-item">
                <a asp-controller="Suppliers" asp-action="Index" class="btn btn-warning">Manage Suppliers</a>
            </div>
            <div class="button-item">
                <a asp-controller="Reports" asp-action="Index" class="btn btn-dark">Generate Reports</a>
            </div>
            <div class="button-item">
                <a asp-controller="Sale" asp-action="Sale" class="btn btn-success">Sale</a>
            </div>
            <div class="button-item">
                <a asp-controller="WorkSchedule" asp-action="Index" class="btn btn-success">Work Schedule</a>
            </div>
        </div>
    </div>
}

<style>
    .btn {
        font-size: 1.25rem; 
        padding: 1rem; 
        border-radius: 15px; 
        transition: all 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 120px;
        text-align: center;
    }

        .btn:hover {
            transform: scale(1.05); 
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .btn:active {
            transform: scale(0.95); 
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2); 
        }

    .container {
        max-width: 100%; 
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .button-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); 
        gap: 20px;
        width: 100%;
    }

    .button-item {
        display: flex;
        justify-content: center; 
    }
</style>
